@model APP_ELTIEMPO_PRUEBA.Models.OfertaEmpleoViewModel

@{
    ViewBag.Title = Model.ID == 0 ? "Crear Oferta de Empleo" : "Editar Oferta de Empleo";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Guardar", "OfertaEmpleo", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)

    <div class="form-group">
        @Html.LabelFor(m => m.CARGO, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CARGO, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CARGO)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DESCRIPCION, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.DESCRIPCION, new { @class = "form-control", rows = 3 })
            @Html.ValidationMessageFor(m => m.DESCRIPCION)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.UBICACION, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UBICACION, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UBICACION)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SALARIO, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SALARIO, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SALARIO)
        </div>
    </div>

    <!--div class="form-group">
        Html.LabelFor(m => m.FECHA_PUBLICACION, htmlAttributes: new { class = "control-label col-md-2" })
        <div class="col-md-10">
            Html.TextBoxFor(m => m.FECHA_PUBLICACION, "{0:yyyy-MM-dd}", new { class = "form-control", type = "date" })
        </div>
    </div-->

    <div class="form-group">
        @Html.LabelFor(m => m.TIPO_CONTRATO_ID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.TIPO_CONTRATO_ID, Model.TiposContrato, "-- Seleccione --", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.TIPO_CONTRATO_ID)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </div>
}